generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model users {
  id              Int      @id @default(autoincrement())
  firstName       String   // Имя
  lastName        String   // Фамилия
  middleName      String?  // Отчество (необязательное поле)
  city            String   // Город
  group           String   // Группа
  studentId       String   @unique // Номер зачётной книжки
  phone           String   // Номер телефона
  email           String   @unique
  hashed_password        String
}